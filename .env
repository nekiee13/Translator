# Environment Variables for Translator App

# Maximum number of tokens to generate in the output
# Reduced to match model constraints (encoder/decoder max 128 tokens)
MAX_NEW_TOKENS=128

# Minimum length for generated translation
MIN_LENGTH=30

# Overlap between chunks during chunking
CHUNK_OVERLAP=20

# Prevent repetition of n-grams of this size
NO_REPEAT_NGRAM_SIZE=3

# Adjust translation behavior (optional)

# Control randomness
TEMPERATURE=0.5

# Nucleus sampling for diversity
TOP_P=0.95

# Encourage longer outputs
LENGTH_PENALTY=1.0

# Number of beams for beam search (controls the number of parallel paths to explore)
NUM_BEAMS=2

# Whether to use sampling for generation
DO_SAMPLE=True